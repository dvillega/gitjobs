<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
     <class name="com.employer.Company" table="Company">
          <meta attribute="class-description">
             This class contains Company details for agencies posting Jobs
         </meta>
         <id name="id" type="int" column="id">
             <generator class="identity"/>
         </id>
         <property name="name" column="name" type="string" />
         <property name="address_id" column="address_id" type="int" />
         <property name="email" column="email" type="string" />
     </class>
     <class name="com.jobseeker.Person" table="person">
         <meta attribute="class-description">
             This class contains Person details for Clients looking for Jobs
         </meta>
         <id name="id" type="int" column="id">
             <generator class="identity"/>
         </id>
         <property name="name" column="name" type="string" />
         <property name="address_id" column="address_id" type="int" />
         <property name="zip_code" column="zip_code" type="string" />
         <property name="email" column="email" type="string" />
         <property name="gender" column="gender" type="char" />
     </class>
 </hibernate-mapping>